@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager
@inject UserManager<IdentityUser> userManager
@model Bloggie.Web.Models.ViewModel.BlogPostLikeViewModel
@{
	var userId = userManager.GetUserId(User);
}
@{
	ViewData["Title"] = Model.PageTitle;
}

<div class="container py-4">
	<div class=" row justify-content-center mb-2">
		<div class="col-12 col-lg-6">
			@if(Model != null)
			{

				<h1 class="mb-3">
					@Model.Heading
				</h1>
				<div class="d-flex justify-content-between mb-3">
					<span>@Model.Author</span>
					<span>@Model.PublishedDate.ToShortDateString()</span>
				</div>

				<div class=" mb-3">
					@if (signInManager.IsSignedIn(User))
					{
						@if (Model.Liked)
						{
							<a style="cursor:pointer">
								<i class="bi bi-hand-thumbs-up-fill"></i>
							</a>
						}
						else
						{
							<a id="addlike" style="cursor:pointer">
								<i class="bi bi-hand-thumbs-up"></i>
							</a>
						}
					}
					
					<span id="totalLikespost">@Model.TotalLikes</span> likes
				</div>
				<div class="d-flex mb-3">
					@foreach (var tag in Model.Tags)
					{
						<span class=" badge bg-secondary me-1">@tag.DisplayName</span>
					}
				</div>
				<div class="mb-3">
					<img src="@Model.FeaturedImageUrl" class="img-fluid d-block "/>
				</div>

				<div class="mb-3">
					@Html.Raw(Model.Content)
				</div>

			}
		</div>
	</div>

</div>

@section Scripts{
	<script>
		
		const addLikeElement = document.getElementById('addlike');
		const totalLikesElement = document.getElementById('totalLikespost');

		async function getTotalLikes(){
			fetch('/api/BlogPostLike/@Model.Id/totalLikes',{
				method:'GET',
				headers:{
					'Content-Type' : 'application/json',
					'Accept' : '*/*'
				},

			}).then(data=>data.json())
			.then(result=>totalLikesElement.innerHTML=result)
		};


		async function addlikeForBlog(){
			 fetch('/api/blogPostLike/add',{
				method: 'POST',
				headers: {
					'Content-Type': 'application/json',
					'Accept': '*/*'
				},

				body : JSON.stringify({ blogPostId : '@Model.Id',
					userId : '@userId' })
			}).then(()=>{
				addLikeElement.innerHTML =  '<i class="bi bi-hand-thumbs-up-fill"></i>',
				addLikeElement.removeEventListener('click',addlikeForBlog),
				getTotalLikes()
			})

		};

		addLikeElement.addEventListener('click',addlikeForBlog);

	</script>
}