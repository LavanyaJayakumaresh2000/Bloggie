@model Bloggie.Web.Models.ViewModel.LoginModel
@{
}


<div class="container mx-auto">
	<div class="row justify-content-center">
		<div class="col-12 col-lg-6">
			<form method="post">
				<h1 class="mt-3 mb-3 h3">Login</h1>
				<div class="mb-3">
				<label class="form-label">Username</label>
				<input class="form-control" type="text" id="username" asp-for="Username" required/>
				<span class="text-danger" asp-validation-for="Username"></span>
				</div>

				<div class="mb-3">
					<label class="form-label">Password</label>
					<input class="form-control" type="password" id="passwword" asp-for="Password" required minlength="6"/>
					<span class="text-danger" asp-validation-for="Password"></span>
				</div>
				<div class="mb-3">
					<button class="btn btn-dark text-light">Login</button>
				</div>

				<input  type="hidden" asp-for="ReturnUrl"/>
			</form>
		</div>

	</div>
</div>