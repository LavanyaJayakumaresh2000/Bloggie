@model Bloggie.Web.Models.ViewModel.AddBlogPostRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New BlogPosts - Admin functionality</h1>
    </div>
</div>

<div class="container py-3">
    <form method="post">
    <div class="mb-3">
            <label class="form-label">Heading</label>
            <input class="form-control" type="text" id="heading" asp-for="Heading" />
    </div>

        <div class="mb-3">
            <label class="form-label">Page Title</label>
            <input class="form-control" type="text" id="pageTitle" asp-for="PageTitle" />
        </div>

        <div class="mb-3">
            <label class="form-label">Content</label>
            <textarea class="form-control" id="content" asp-for="Content"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Short Description</label>
            <input class="form-control" type="text" id="shortDescription" asp-for="ShortDescription" />
        </div>

        <div class="mb-3">
            <label class="form-label">Featured Upload Image</label>
            <input class="form-control" id="featuredUploadImage" type="file" />
            <img src="" id="imageUpload" style=" display:none; width:300px; " />
        </div>
        <div class="mb-3"> 
            <label class="form-label">Featured Image Url</label>
            <input class="form-control" type="text" id="featuredImageUrl" asp-for="FeaturedImageUrl" />
        </div>

        <div class="mb-3">
            <label class="form-label">UrlHandle</label>
            <input class="form-control" type="text" id="urlHandle" asp-for="UrlHandle" />
        </div>

        <div class="mb-3">
            <label class="form-label">PublishedDate</label>
            <input class="form-control" type="date" id="publishedDate" asp-for="PublishedDate" />
        </div>

        <div class="mb-3">
            <label class="form-label">Author</label>
            <input class="form-control" type="text" id="Author" asp-for="Author" />
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="visible" asp-for="Visible">
            <label class="form-check-label">Is Visible</label>
        </div>

        <div class="mb-3">   
            <label class="form-label">Tags</label>
            <select class=" form-select" asp-items="@Model.Tags" asp-for="SelectedList"></select>
        </div>

        <div class="mb-3">
            <button class="btn btn-dark" type="submit">Save</button>
        </div>
    </form>
</div>

@section Scripts{
    <script>
        var editor = new FroalaEditor("#content",{
            imageUploadUrl : '/api/image'
        });
        

        const featuredUploadElement = document.getElementById('featuredUploadImage');
        const featuredImageElement = document.getElementById('featuredImageUrl');
        const imageUploadElement = document.getElementById('imageUpload');


        async function featuredUpload(e){
            console.log(e.target.files[0]);

            let data =new FormData();
            data.append('file',e.target.files[0]);
             await fetch ('/api/image',{
                 method:'POST',
                 headers: {
                     'Accept':'*/*'
                 },
                 body: data
             }).then(response => response.json())
             .then(result=> {
                 console.log(result);
                 featuredImageElement.value = result;
                 imageUploadElement.src = result;
                 imageUploadElement.style.display = 'block';
             });
             
        }


        featuredUploadElement.addEventListener('change',featuredUpload);
    </script>
}