@model Bloggie.Web.Models.ViewModel.EditBlogPostRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit BlogPosts - Admin functionality</h1>
    </div>
</div>

<div class="container py-5">
    @if(Model != null)
    {
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Id</label>
                <input class=" form-control" type="text" id=" id" asp-for="Id" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Heading</label>
                <input class=" form-control" id="heading" type="text" asp-for="Heading" />
            </div>

            <div class="mb-3">
                <label class="form-label">PageTitle</label>
                <input class=" form-control" id="pageTitle" type="text" asp-for="PageTitle" />
            </div>

            <div class="mb-3">
                <label class="form-label">Content</label>
                <textarea class=" form-control" id="content" asp-for="Content"></textarea>
            </div>


            <div class="mb-3">
                <label class="form-label">ShortDescription</label>
                <input class=" form-control" id="shortDescription" type="text" asp-for="ShortDescription" />
            </div>

            <div>
                <label class="form-label">Featured Image Upload</label>
                <input class="form-control" id="featuredImageUpload" type="file"/>
                @if(Model.FeaturedImageUrl != null)
                {
                    <img src="@Model.FeaturedImageUrl" id="imageUpload" style="display:block; width:300px;" />
                }
                else
                {
                    <img src="" id="imageUpload" style="display:none; width:300px;" />
                }
                
            </div>

            <div class="mb-3">
                <label class="form-label">FeaturedImageUrl</label>
                <input class=" form-control" id="featuredImageUrl" type="text" asp-for="FeaturedImageUrl" />
            </div>

            <div class="mb-3">
                <label class="form-label">UrlHandle</label>
                <input class=" form-control" id="urlHandle" type="text" asp-for="UrlHandle" />
            </div>

            <div class="mb-3">
                <label class="form-label">PublishedDate</label>
                <input class=" form-control" id="publishedDate" type="date" asp-for="PublishedDate" />
            </div>

            <div class="mb-3">
                <label class="form-label">Author</label>
                <input class=" form-control" id="author" type="text" asp-for="Author" />
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="visible" asp-for="Visible">
                <label class="form-check-label">Is Visible</label>
            </div>

            <div class="mb-3">
                <label class="form-label">Tags</label>
                <select class="form-select" asp-items="@Model.Tags" asp-for="SelectedTags"></select>
            </div>

            <div class="mb-3">
                <button class="btn btn-dark me-3" type="submit">Update</button>
                <button class="btn btn-danger" type="submit" asp-area="" asp-controller="AdminBlogPosts" asp-action="Delete">Delete</button>
            </div>
        </form>
    }
    else
    {
        <p>No blog post found!</p>
    }
</div>

@section Scripts {
    <script>
        var editor = new FroalaEditor("#content",{
            imageUploadUrl : '/api/image'
        });

        const featuredUploadElement = document.getElementById('featuredImageUpload');
        const featuredImageElement = document.getElementById('featuredImageUrl');
        const imageUploadElement = document.getElementById('imageUpload');


        async function featuredUpload(e){
            console.log(e.target.files[0]);

            let data =new FormData();
            data.append('file',e.target.files[0]);
             await fetch ('/api/image',{
                 method:'POST',
                 headers: {
                     'Accept':'*/*'
                 },
                 body: data
             }).then(response => response.json())
             .then(result=> {
                 console.log(result);
                 featuredImageElement.value = result;
                 imageUploadElement.src = result;
                 imageUploadElement.style.display = 'block';
             });

        }


        featuredUploadElement.addEventListener('change',featuredUpload);

    </script>
}              